= form_with(model: applicant, url: careers_job_applicants_path, id: 'applicant-form', html: { class: "space-y-6" }, data: { remote: true }) do |form|
  - if applicant.errors.any?
    #error_explanation
      %h2
        = pluralize(applicant.errors.count, "error")
        prohibited this applicant from being saved:
      %ul
        - applicant.errors.each do |error|
          %li= error.full_message
  .form-group
    = form.label :first_name
    = form.text_field :first_name, class: "mt-1"
  .form-group
    = form.label :last_name
    = form.text_field :last_name, class: "mt-1"
  .form-group
    = form.label :email
    = form.text_field :email, class: "mt-1"
  .form-group
    = form.label :phone
    = form.text_field :phone, class: "mt-1"
  .form-group
    = form.label :resume
    = form.file_field :resume, direct_upload: true, accept: "application/pdf"
  = form.submit 'Submit', class: 'btn-primary float-right'
