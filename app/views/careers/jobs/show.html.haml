= content_for :title, "#{@job.title} at #{@account.name}"
.max-w-prose.mx-auto.relative
  .py-4.text-right
    = link_to "Back to all jobs", :back, class: "text-lg text-blue-600 hover:text-blue-700"
  .py-4.px-2.sticky.top-0.bg-gray-100
    .flex.justify-between.items-baseline
      %h1.text-3xl.font-bold.pb-2.flex-1= @job.title
      = button_to "Apply",                                                                  |
        new_careers_job_applicant_path(@job),                                               |
        class: "btn-primary-outline disabled:opacity-75 disabled:hover:cursor-not-allowed", |
        id: 'apply-button',                                                                 |
        remote: true,                                                                       |
        method: :get,                                                                       |
        data: {                                                                             |
          action: "click->slideover#open"                                                   |
        }                                                                                   |
    %p.text-sm.text-gray-500
      = @job.job_type.humanize
      in #{@job.location}
  .px-2.mt-4
    = @job.description
